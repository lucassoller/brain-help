        android:layout_below="@+id/tv_horario"
        android:layout_marginTop="10dp"
        android:textSize="12pt"
        android:textColor="#000000"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:text="Status: COMPLETA" />

</RelativeLayout>
