<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E5FF"
    tools:context=".activities.TelaCadastro3Activity">

    <EditText
        android:id="@+id/et_logradouro"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Logradouro"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#38B6FF" />

    <EditText
        android:id="@+id/et_numero"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_logradouro"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="NÃºmero"
        android:inputType="number"
        android:padding="10dp"
        android:textColorHint="#38B6FF" />

    <EditText
        android:id="@+id/et_estado"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_numero"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Estado"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#38B6FF" />

    <EditText
        android:id="@+id/et_cidade"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_estado"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#38B6FF" />

    <EditText
        android:id="@+id/et_bairro"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_cidade"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Bairro"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#38B6FF" />

    <EditText
        android:id="@+id/et_cep"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_bairro"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="CEP xxxxx-xxx"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#38B6FF" />

    <Button
        android:id="@+id/bt_cadastrar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_cep"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/button_corner_purple"
        android:text="Cadastrar"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tv_logar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_cadastrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="@string/has_account" />

</RelativeLayout>