<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_foto"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        tools:srcCompat="@drawable/sem_foto"
        android:src="@drawable/sem_foto"
        android:paddingRight="30dp"
        android:paddingLeft="30dp" />

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_foto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="15pt"
        android:textColor="#000000"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:text="Omeprazol" />

    <TextView
        android:id="@+id/tv_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_titulo"
        android:layout_marginTop="15dp"
        android:textSize="11pt"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:layout_marginBottom="10dp"
        android:text="EndereÃ§o: Rua Vitalino Batista de Andrade, 43 - Bairro Centro, Sapucaia do Sul - RS" />
</RelativeLayout>
