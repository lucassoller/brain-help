<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B9E5FF"
    tools:context=".activities.TelaFotosActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_jogos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meu Ã¡lbum"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginBottom="10dp"
            android:textSize="15pt" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_adicionar_fotografia"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_corner_purple"
        android:text="Adicionar nova foto"
        android:textColor="#FFFFFF" />

    <ListView
        android:id="@+id/lv_fotografias"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout"
        android:layout_above="@+id/bt_adicionar_fotografia"
        android:layout_marginBottom="10dp" />
</RelativeLayout>