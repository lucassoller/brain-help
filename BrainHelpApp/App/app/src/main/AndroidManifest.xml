        <activity android:name=".activities.TelaMusicasActivity" />
        <activity android:name=".activities.TelaTarefaCardActivity" />
        <activity android:name=".activities.TelaTarefasActivity" />
        <activity android:name=".activities.TelaChatbotActivity" />
        <activity android:name=".activities.TelaJogosActivity" />
        <activity android:name=".activities.TelaContatoCardActivity" />
        <activity android:name=".activities.TelaContatosActivity" />
        <activity android:name=".activities.TelaHomeActivity" />
        <activity android:name=".activities.TelaCadastroActivity" />
        <activity android:name=".activities.TelaLoginActivity" />
        <activity android:name=".activities.TelaLogin" />
        <activity android:name=".activities.TelaInicialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.app"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/paths" />
        </provider>
    </application>

</manifest>