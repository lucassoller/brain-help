        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_brain_help_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.JogoDaMemoriaActivity"></activity>

        <activity android:name=".activities.TelaCadastroInicialActivity" />
        <activity android:name=".activities.TelaEnderecoCardActivity" />
